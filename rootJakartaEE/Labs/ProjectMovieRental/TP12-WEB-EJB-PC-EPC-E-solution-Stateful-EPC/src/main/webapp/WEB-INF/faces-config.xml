<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>transferBean</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.TransferBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>welcomeMovieRental.xhtml</display-name>
		<from-view-id>/welcomeMovieRental.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>rentForm</from-outcome>
			<to-view-id>/rentForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>rentForm.xhtml</display-name>
		<from-view-id>/rentForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{transferBean.performRental}</from-outcome>
			<to-view-id>/showRentalResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeMovieRental.xhtml</display-name>
		<from-view-id>/welcomeMovieRental.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>returnForm</from-outcome>
			<to-view-id>/returnForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>returnForm.xhtml</display-name>
		<from-view-id>/returnForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{transferBean.performReturnal}</from-outcome>
			<to-view-id>/showReturnalResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
